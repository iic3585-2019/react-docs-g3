<div class="flex-grid-fourths">
  <div class="col"></div>
    <div class="col2">
    <h1>Sign in</h1>
    <form action="<%= authPath %>" method="post">
      <input type="hidden" name="_method" value="put" />
      <input type="hidden" name="referer" value=<%= locals.referer %> />
  	  <div class="form-group">
  	    <label class="form-label" for="exampleInputEmail1">Email address</label>
  	    <input class="form-control" name="email" aria-describedby="emailHelp" placeholder="Enter email or Username">
  	    <small id="emailHelp" class="form-text text-muted">We'll never share your email with anyone else.</small>
  	  </div>
  	  <div class="form-group">
  	    <label class="form-label" for="exampleInputPassword1">Password</label>
  	    <input type="password" class="form-control" name="password" placeholder="Password">
  	  </div>

  	  <button class="btn btn-primary" type"submit">Sign In</button>
    </form>
  </div>
  <div class="col"></div>

</div>
