<div>
  <div>
    <div>
      <a class="post-user label"><%= post.postedBy %></a> <span class="post-timestamp label"> <%=post.date%></span>
      <div class="post-content-wrapper">
        <% if (post.postType == 0) { %>
          <a class="post-dog-name label" href="/dog/<%=post.dogId%>"><%= post.dogNickname %></a><span class="post-description label"> has been found 📍!</span>
          <p class="label"><%= post.text %></p>
          <img class="img-responsive img-rounded post-img" src="<%= post.imgUrl %>"></img>
        <% } else if (post.postType == 1) { %>
          <a class="post-dog-name label" href="/dog/<%=post.dogId%>"><%= post.dogNickname %></a><span class="post-description label"> updated!</span>
        <% } else { %>
          <a class="post-dog-name label" href="/dog/<%=post.dogId%>"><%= post.dogNickname %></a><span class="post-description label"> has found a home! 🏡</span>
          <p class="label"><%= post.text %></p>
          <img class="img-responsive img-rounded post-img" src="<%= post.imgUrl %>"></img>
        <% } %>
      </div>
    </div>
    <div class="post-comments-wrapper">
      <a class="post-comments-count label" href="/posts/<%=post.id%>/comments"><%=post.commentsCount%> comments</a>
    </div>
  </div>
</div>
